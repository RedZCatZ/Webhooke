def fange_doggy():
    # Hier würde Ihre Logik stehen, um ein Doggy zu fangen
    # Angenommen, das Doggy heißt "Rex"
    doggy_name = "Rex"
    return doggy_name

# Benachrichtigung senden, wenn ein Doggy gefangen wird
gefangenes_doggy = fange_doggy()
message = f"Glückwunsch! Du hast ein Doggy gefangen: {gefangenes_doggy}"
send_discord_message(webhook_url, message)
